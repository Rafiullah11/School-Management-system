@model SchoolManagementSystem.Models.SectionModel

@{
    ViewData["Title"] = "Create";
}

<div class="container border mt-3">
    <h2 class="text-center text-primary mt-1">Classes Detail Table</h2>
    <hr />
    <div class="row">
        <div class="col-md-4 offset-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="ClassId" class="control-label">Class</label>
                    <select asp-for="ClassId" class="form-control" 
                            asp-items="@(new SelectList(ViewBag.message,"ClassId","Name"))">
                        <option>Select Class</option>

                    </select>
                    <span asp-validation-for="ClassId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Section</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>

