@model IEnumerable<SchoolManagementSystem.Models.StaffSalaryViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container border mt-3">
    <h1 class="text-center text-primary mt-1">Staff Salary Details</h1>
    <hr />
    <div class="row">
        <div class="col-12">
            <a class="btn btn-primary mb-2" asp-action="Create" asp-controller="StaffSalary">Add New Student</a>
        </div>
    </div>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            Salary Detail Table
        </div>
        <div class="card-body">
            <div class="table table-responsive">
                <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                    <thead class="table-active">
                        <tr>
                            <th>Name</th>
                            <th>Department</th>
                            <th>Salary</th>
                            <th>Month</th>
                            <th>Year</th>
                            <th>Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TypeName)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Salary)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MonthName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Year)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Date)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id"  style="padding:5px" class=" btn btn-info">
                                        <div><i  class=" fas fa-user-edit"></i></div>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" style="padding:5px" class=" btn btn-danger">
                                        <div><i  class=" fas fa-trash-alt"></i></div>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>