@model SchoolManagementSystem.Models.TeacherViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container border-top mt-5">
    <div class="mt-5 border offset-2 shadow" style="width:600px;height:230px; background-color:lightcoral">
        <h1 class="text-center text-danger">Delete</h1>
        <hr />
        <h4 class="mt-3 text-center text-white">Are you sure you want to delete: @Model.Name?</h4>
        <div class="mt-xl-5 text-center">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index" class="btn btn-info">Cancel</a>
            </form>
        </div>
    </div>
</div>
