@model IEnumerable<SchoolManagementSystem.Models.FeeViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container border mt-3">
    <h1 class="text-center text-primary mt-1">Fees Details</h1>
    <hr />
    <div class="row">
        <div class="col-12">
            <a class="btn btn-primary mb-2" asp-action="Create" asp-controller="Fee">Add New Fee</a>

        </div>
    </div>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            Fee Detail Table

        </div>
        <div class="card-body">
            <div class="table table-responsive">
                <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                    <thead class="table-active">
                        <tr>
                            <th>Class</th>
                            <th>Section</th>
                            <th>Student</th>
                            <th>Month</th>
                            <th>Fee</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.ClassName)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.SectionName)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.StudentName)
                                </td>
                                <td>

                                    @Html.DisplayFor(modelItem => item.Month)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Fees)
                                </td>

                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">
                                        <div><i class="fas fa-user-edit"></i></div>
                                    </a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                        <div><i class="fas fa-trash-alt"></i></div>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>