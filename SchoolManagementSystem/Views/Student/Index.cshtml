@model IEnumerable<SchoolManagementSystem.Model.StudentModel>
@{
    ViewData["Title"] = "Index";
}

<div class="container border mt-3">
    <h1 class="text-center text-primary mt-1">Student Details</h1>
    <hr />
    <div class="row">
        <div class="col-12">
            <a class="btn btn-primary mb-2" asp-action="Create" asp-controller="Student">Add New Student</a>

        </div>
    </div>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            Students Detail Table

        </div>
        <div class="card-body">
            <div class="table table-responsive">
                <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                    <thead class="table-active">
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Class</th>
                            <th>Section</th>
                            <th>Address</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Email</td>
                                <td>@item.ClassName</td>
                                <td>@item.SectionName</td>
                                <td>@item.Address</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">
                                        <div><i class="fas fa-user-edit"></i></div>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                        <div><i class="fas fa-trash-alt"></i></div>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


