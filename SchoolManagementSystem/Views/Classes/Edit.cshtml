@model SchoolManagementSystem.Models.ClassesModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container border mt-3 ">

    <h2 class="text-center text-primary mt-1">Edit Detail </h2>
    <hr />
    <div class="row">

        <div class="col-md-4 offset-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ClassId" />

                <div class="form-group">

                    <label asp-for="Name" class="control-label ">Class Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>

                </div>

                <div class="form-group">
                    <input type="submit" value="Update Record" class="btn btn-primary" />
                </div>

            </form>
        </div>

    </div>
</div>

