@model SchoolManagementSystem.Models.SectionModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container border mt-3">
    <h2 class="text-center text-primary mt-1">Classes Detail Table</h2>
    <hr />
    <div class="row">
        <div class="col-md-4 offset-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Section</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ClassId" class="control-label">Class Name</label>
                    <select asp-for="ClassId" class="form-control"asp-items="@(new SelectList(ViewBag.message,"ClassId","Name"))" ></select>
                    <span asp-validation-for="ClassId" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <input type="submit" value="Update" class="btn btn-primary" />
                        </div>
                    </div>
                    <div class="col-md-5 ">
                        <div class="form-group ">
                            <button class="btn btn-primary" type="submit" asp-action="Index">
                                <span class="">Back to List </span>
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
